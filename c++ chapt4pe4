#include<iostream>
#include<string>

int main()
{
    using namespace std;
    string firstname;
    string lastname;
    string comma = ",";
    string space = " ";

    cout << "Enter your first name:\n";
    getline(cin,firstname);
    cout << "Enter your last name:\n";
    getline(cin,lastname);
    lastname = lastname + comma + space + firstname;
    cout << "Here is the information in a single string:\n";
    cout << lastname;

    return 0;
}
