#include<iostream>
#include<string>
#include<cstring>
using namespace std;

int main()
{
    cout << "Enter words (to stop, type the word done): " << endl;
    int i=0;
    string words;
    cin >> words;
    while (words!="done")
    {

             cin >> words;
             ++i;
    }
    cout << "You entered a total of " << i << " words." << endl;
    return 0;
}


