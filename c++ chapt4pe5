#include<iostream>
#include<string>
using namespace std;

struct CandyBar
{
    string brand;
    double weight;
    int cal;
};

int main()
{

    CandyBar snack =
    {
        "Mocha Munch",
        2.3,
        350
    };
    cout << "brand: " << snack.brand << endl;
    cout << "weight: " << snack.weight << endl;
    cout << "calories: " << snack.cal << endl;
    return 0;
}
