#include<iostream>
#include<string>
using namespace std;

struct CandyBar
{
    string brand;
    double weight;
    int cal;
};

int main()
{

    CandyBar snack [3] =
    {
        {"Mocha Munch",2.3,350},
        {"Dove",2.5,365},
        {"Valrhona",2.8,370}
    };
    cout << "brand: " << snack[0].brand << endl;
    cout << "weight: " << snack[0].weight << endl;
    cout << "calories: " << snack[0].cal << endl << endl;
     cout << "brand: " << snack[1].brand << endl;
    cout << "weight: " << snack[1].weight << endl;
    cout << "calories: " << snack[1].cal << "\n\n";
     cout << "brand: " << snack[2].brand << endl;
    cout << "weight: " << snack[2].weight << endl;
    cout << "calories: " << snack[2].cal << endl;
    return 0;
}
