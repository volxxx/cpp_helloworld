#include<iostream>
#include<string>
using namespace std;


int main()
{

    int sum,sum1,sum2,sum3;
    sum = 0;
    sum1 =0;
    sum2=0;
    sum3=0;
     string months[3][12]=
    {
        {"2012 Jan","2012 Feb","2012 Mar","2012 Apr","2012 May","2012 Jun","2012 Jul","2012 Aug","2012 Sep","2012 Oct","2012 Nov","2012 Dec"},
        {"2013 Jan","2013 Feb","2013 Mar","2013 Apr","2013 May","2013 Jun","2013 Jul","2013 Aug","2013 Sep","2013 Oct","2013 Nov","2013 Dec"},
        {"2014 Jan","2014 Feb","2014 Mar","2014 Apr","2014 May","2014 Jun","2014 Jul","2014 Aug","2014 Sep","2014 Oct","2014 Nov","2014 Dec"}
    };

    int sales [3][12];

   for (int i=0;i<3;++i)
   {
       for (int j=0;j<12;++j)
       {cout << "enter the sales of " << months[i][j] << ":" << endl;
       cin >> sales[i][j];
       sum = sum + sales[i][j];
       }

   }
   for (int i=0;i<12;++i)
   {
        sum1=sum1+sales[0][i];
        sum2=sum2+sales[1][i];
        sum3=sum3+sales[2][i];
   }
    cout << "Total sales of 2012 are " << sum1 << endl;
    cout << "Total sales of 2013 are " << sum2 << endl;
    cout << "Total sales of 2014 are " << sum3 << endl;
    cout << "Total sales are: " << sum << endl;
    return 0;
}
