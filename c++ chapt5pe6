#include<iostream>
#include<string>
#include<cstring>
using namespace std;

struct car
{
    string make;
    int year_made;
};


int main()
{
    cout << "How many cars do you wish to catalog? " << endl;
    int num;
    cin >> num;
    cin.get();
    car * pt = new car [num];
    for (int i=0; i<num; ++i)
    {
        cout << "Car #" << i+1 << endl;
        cout << "Please enter the make: "<<endl;
        getline(cin,pt[i].make);
        cout << "Please enter the year made: "<< endl;
        cin >> pt[i].year_made;
        cin.get();
    }
    cout << "Here is your collection: " << endl;
    for (int i=0;i<num;++i)
    {
        cout << pt[i].year_made << " " << pt[i].make << endl;
    }
    delete [] pt;
    return 0;
}
