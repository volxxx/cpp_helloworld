#include<iostream>
#include<string>
#include<cstring>
#include<cctype>
using namespace std;
double inc =0.0;
double caculate_tax(double x);


int main()
{
    cout << "Please enter your income: ";

 while((cin>>inc)&&(inc>=0.0))
 {
     cout << caculate_tax(inc) << endl;
     cout << "Please enter your income: ";
    cin >> inc;
 }
 cout << "You've entered a non-numeric or negative input." << endl;
   return 0;
}



double caculate_tax(double x)
{
    double y=0.0;
    if (x<=5000)
    {
        y = 0;
    }
    else if ( (x>5000) && (x<=15000))
    {
        y= (x-5000)*0.1;
    }
    else if ((x>15000)&&(x<=35000))
    {
        y= 10000*0.1+(x-15000)*0.15;
    }
    else if (x>35000)
    {
        y=10000*0.1+20000*0.15+(x-35000)*0.2;
    }
    return y;
}
