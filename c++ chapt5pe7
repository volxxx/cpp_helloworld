#include<iostream>
#include<string>
#include<cstring>
using namespace std;

int main()
{
    cout << "Enter words (to stop, type the word done): " << endl;
    int i=0;
    char words[25][15];
    char (*p)[15]=words;

    cin >> words [i];
    while (strcmp(p[i],"done"))
    {
            ++i;
             cin >> words[i];
    }
    cout << "You entered a total of " << i << " words." << endl;
    return 0;
}
